<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout.form">
    <Dialog
        id="addComponentDialog"
        title="Add Component"
        contentWidth="30rem"
        afterClose=".onCancelAddComponent">
        <content>
            <layout:SimpleForm
                id="addComponentForm"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="true">
                <Label text="Pay Component" />
                <Select
                    id="payComponentSelect"
                    items="{AddComponentModel>/results}"
                    width="100%">
                    <core:Item key="{AddComponentModel>externalCode}" text="{AddComponentModel>name}" />
                </Select>
                <Label text="Value" />
                <Input
                    id="valueInput"
                    width="100%" />
            </layout:SimpleForm>
        </content>
        <beginButton>
            <Button text="Submit" press=".onSubmitAddComponent" type="Emphasized" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onCancelAddComponent" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>